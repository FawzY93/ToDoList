@model ToDoList.Models.ViewModels.UserGetAllViewModel


<div class="container">
    <h2>Users</h2>
    <p>This is a list of all users in the system.</p>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Emplyee Id</th>
                    <th>Name</th>
                    <th>Age</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Users.Count; i++)
                {
                    var user = Model.Users[i];
                    <tr>
                        <td>@(i+1)</td>
                        <td>@user.EmployeeId</td>
                        <td>@user.Name</td>
                        <td>@user.Age</td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>